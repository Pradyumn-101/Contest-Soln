class Solution {
    public int numberOfPairs(int[][] points) {
        int n=points.length;
        int count=0;
        Arrays.sort(points,(a,b)->a[0]==b[0]?b[1]-a[1]:a[0]-b[0]);
        for(int i=0;i<n;i++)
        {
            int x1=points[i][0];
            int y1=points[i][1];
            int top=y1;
            int bottom=Integer.MIN_VALUE;
            for(int j=i+1;j<n;j++)
            {
                int x2=points[j][0];
                 int y2=points[j][1];
                if(y2<=top && y2>bottom)
                {
                    count++;
                    bottom=y2;
                    if(top==y2)top--;
                    
                }
            }
        }
        return count;
    }
}
