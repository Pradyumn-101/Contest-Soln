class Solution {
    public int minRemoval(int[] nums, int k) {
        Arrays.sort(nums);

        int length = nums.length;
        int i = 0;
        int maxElements = 0;

        for(int j = 0; j < nums.length; j++) {
            while((long) nums[i] * k < (long) nums[j]) {
                i++;
            }

        maxElements = Math.max(maxElements, j - i + 1);
        }

        return length - maxElements;
    }
}
