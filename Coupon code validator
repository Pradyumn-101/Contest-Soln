import java.util.*;

class Solution {

    static class Coupon {
        String code;
        String businessLine;

        Coupon(String code, String businessLine) {
            this.code = code;
            this.businessLine = businessLine;
        }
    }

    public List<String> validateCoupons(String[] code, String[] businessLine, boolean[] isActive) {

        // business line priority
        Map<String, Integer> order = new HashMap<>();
        order.put("electronics", 0);
        order.put("grocery", 1);
        order.put("pharmacy", 2);
        order.put("restaurant", 3);

        List<Coupon> list = new ArrayList<>();

        for (int i = 0; i < code.length; i++) {

            // must be active
            if (!isActive[i]) continue;

            // must be valid business line
            if (!order.containsKey(businessLine[i])) continue;

            String c = code[i];

            // must be non-empty
            if (c == null || c.length() == 0) continue;

            // must contain only alphanumeric or underscore
            boolean valid = true;
            for (char ch : c.toCharArray()) {
                if (!(Character.isLetterOrDigit(ch) || ch == '_')) {
                    valid = false;
                    break;
                }
            }

            if (valid) {
                list.add(new Coupon(c, businessLine[i]));
            }
        }

        // sort by business line order, then lexicographically by code
        Collections.sort(list, (a, b) -> {
            int cmp = order.get(a.businessLine) - order.get(b.businessLine);
            if (cmp != 0) return cmp;
            return a.code.compareTo(b.code);
        });

        // extract only codes
        List<String> result = new ArrayList<>();
        for (Coupon c : list) {
            result.add(c.code);
        }

        return result;
    }
}
